<Page x:Class="SVDWPF.Pages.AddYchet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SVDWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddYchet">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="Aquamarine">
            <TextBlock Text="Редактор" Margin="5"/>
            <TextBox Text="{Binding nomer_zapisi}" Margin="5"/>
            <TextBox Text="{Binding nomer_licevogo_scheta}" Margin="5"/>
            <TextBox Text="{Binding Mesyac}" Margin="5"/>
            <TextBox Text="{Binding Tariff}" Margin="5"/>
            <TextBox Text="{Binding kolvo_kilovatt}" Margin="5"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Margin="5" Width="150" Height="30" Click="SaveBtn_Click"/>
            <Button x:Name="BackBtn" Content="Отменить" Margin="5" Width="150" Height="30" Click="BackBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
